<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultadoActivity">

    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:background="@drawable/resultado"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Resultado"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="22dp"
        app:layout_constraintBottom_toTopOf="@+id/imvLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.513" />

    <TextView
        android:id="@+id/txtResultado2"
        android:layout_width="202dp"
        android:layout_height="214dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColorHint="#0F0F0F"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtResultado"
        app:layout_constraintEnd_toEndOf="@+id/txtResultado"
        app:layout_constraintStart_toStartOf="@+id/txtResultado"
        app:layout_constraintTop_toTopOf="@+id/txtResultado"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imvLogo"
        android:layout_width="95dp"
        android:layout_height="104dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/logo" />
</androidx.constraintlayout.widget.ConstraintLayout>